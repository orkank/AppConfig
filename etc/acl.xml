<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <!-- Menu -->
                    <resource id="IDangerous_AppConfig::appconfig" title="App Config" translate="title" sortOrder="200">
                        <resource id="IDangerous_AppConfig::groups" title="Groups" translate="title" sortOrder="10"/>
                        <resource id="IDangerous_AppConfig::keyvalues" title="Key-Value Pairs" translate="title" sortOrder="20"/>
                        <resource id="IDangerous_AppConfig::export" title="Export" translate="title" sortOrder="30"/>
                        <resource id="IDangerous_AppConfig::import" title="Import" translate="title" sortOrder="40"/>
                    </resource>

                    <!-- Settings -->
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="IDangerous_AppConfig::config" title="App Config Section" translate="title" sortOrder="200"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>


